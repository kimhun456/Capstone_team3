#include "clock.h"

using namespace std;


string getCurrentTime(appdata_s *ad){

	string header = "<align=center>";
	string tail = "</align>";
	string millisecond = std::to_string(ad->milliseconds);

	int seconds = ad->milliseconds /1000;
	int minutes = seconds/60;
	string min;
	if(minutes < 10){
		 min = "0" + std::to_string(minutes);
	}else{

	}






}

Eina_Bool
ticktock(void *data) {


	appdata_s *ad =  static_cast<appdata_s*>(data);

	ad->milliseconds ++;




	const char * message = str.c_str();


	/* Label */

	elm_object_text_set(ad->label, message);

    return ECORE_CALLBACK_RENEW;
 }


void
make_clock(appdata_s *ad){
	ad->count = 0;
	// 0.001초 마다 호출된다.
	ecore_timer_add( 0.001, ticktock, ad);
}
